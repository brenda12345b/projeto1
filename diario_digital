from flask import Flask, render_template, request, redirect, url_for

app = Flask(__name__)

@app.route('/login', methods=['GET', 'POST'])
def login():
    if request.method == 'POST':
        email = request.form['email']
        senha = request.form['senha']
        
        if email == "teste@exemplo.com" and senha == "123":
            return redirect(url_for('inicio'))  # Garante que 'inicio' esteja definido
        else:
            return "Email ou senha inv√°lidos!"
    
    return render_template('login.html')

@app.route('/inicio')
def inicio():
    return "<h3>Bem-vindo ao Di√°rio Digital!</h3>"

@app.route('/recuperar')
def recuperar():
    return "<h3>P√°gina de recupera√ß√£o de senha (em constru√ß√£o)</h3>"



